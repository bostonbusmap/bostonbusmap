<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/iconSpinner_dropdown"
	android:padding="10dp"
	>
	<ImageView android:id="@+id/icon_dropdown" 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:contentDescription="@string/modeOption"
	></ImageView>
	<TextView android:id="@+id/text_dropdown" android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:textColor="#000000" android:layout_alignParentRight="true"></TextView>
</RelativeLayout>